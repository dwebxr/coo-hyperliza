# OpenAI Configuration (required if using the Openai LLM Plugin)
OPENAI_API_KEY=

# Anthropic Configuration (required if using the Anthropic LLM Plugin)
ANTHROPIC_API_KEY=

# OpenAI TTS (Text-to-Speech) settings
OPENAI_TTS_MODEL=
OPENAI_TTS_VOICE=
OPENAI_TTS_INSTRUCTIONS=

# ElevenLabs Voice Settings (required if using the ElevenLabs Plugin)
ELEVENLABS_XI_API_KEY=
ELEVENLABS_MODEL_ID=eleven_multilingual_v2
ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL
ELEVENLABS_VOICE_STABILITY=0.5
ELEVENLABS_VOICE_SIMILARITY_BOOST=0.9
ELEVENLABS_VOICE_STYLE=0.66
ELEVENLABS_VOICE_USE_SPEAKER_BOOST=false
ELEVENLABS_OPTIMIZE_STREAMING_LATENCY=4
ELEVENLABS_OUTPUT_FORMAT=pcm_16000

# Database Connection
POSTGRES_URL=

# Client App Port
SERVER_PORT=

# Hyperfy World WebSocket URL
# Default: wss://chill.hyperfy.xyz/ws
# For local Hyperfy server (e.g., running on port 3000), use: ws://localhost:3000/ws
WS_URL=wss://chill.hyperfy.xyz/ws

# Discord Configuration
DISCORD_APPLICATION_ID=
DISCORD_API_TOKEN=

# Discord Auto-Post Settings
# Channel ID where the bot will post daily updates
DISCORD_POST_CHANNEL_ID=
# Post interval in hours (default: 24 = once per day)
DISCORD_POST_INTERVAL_HOURS=24
# Enable auto-posting (true/false)
DISCORD_ENABLE_AUTO_POST=true

DISCORD_VOICE_CHANNEL_ID=


# X API キー類（OAuth 1.0a）
TWITTER_API_KEY=
TWITTER_API_SECRET_KEY=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# Twitter Feature Toggles (Free Plan: conservative settings)
TWITTER_ENABLE_POST=true           # Enable daily posting
TWITTER_ENABLE_REPLIES=true        # Reply to mentions
TWITTER_ENABLE_ACTIONS=true       # Disable likes/retweets (save API calls)
TWITTER_ENABLE_DISCOVERY=true     # Disable discovery (save API calls)
TWITTER_DISCOVERY_INTERVAL=120          # 何分ごとに1サイクル動くか
TWITTER_MAX_FOLLOWS_PER_CYCLE=1       # 1サイクルでフォローする上限
TWITTER_MAX_ENGAGEMENTS_PER_RUN=3    # 1サイクルでいいね/リプなどの上限

# Posting Configuration (Free Plan: 1 post per day)
TWITTER_POST_IMMEDIATELY=false     # Don't post on startup
TWITTER_POST_INTERVAL=1440         # 1440 minutes = 24 hours = 1 post/day
TWITTER_MAX_ENGAGEMENTS_PER_RUN=3  # Max 3 replies per engagement cycle

# Rate Limiting (conservative for Free Plan)
TWITTER_RETRY_LIMIT=3              # Reduce retries to save API calls
TWITTER_DRY_RUN=false              # Set to true to test without posting