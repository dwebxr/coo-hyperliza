# OpenAI Configuration (required if using the Openai LLM Plugin)
OPENAI_API_KEY=

# Anthropic Configuration (required if using the Anthropic LLM Plugin)
ANTHROPIC_API_KEY=

# OpenAI TTS (Text-to-Speech) settings
OPENAI_TTS_MODEL=
OPENAI_TTS_VOICE=
OPENAI_TTS_INSTRUCTIONS=

# ElevenLabs Voice Settings (required if using the ElevenLabs Plugin)
ELEVENLABS_XI_API_KEY=
ELEVENLABS_MODEL_ID=eleven_multilingual_v2
ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL
ELEVENLABS_VOICE_STABILITY=0.5
ELEVENLABS_VOICE_SIMILARITY_BOOST=0.9
ELEVENLABS_VOICE_STYLE=0.66
ELEVENLABS_VOICE_USE_SPEAKER_BOOST=false
ELEVENLABS_OPTIMIZE_STREAMING_LATENCY=4
ELEVENLABS_OUTPUT_FORMAT=pcm_16000

# Database Connection
POSTGRES_URL=

# Client App Port
SERVER_PORT=

# Hyperfy World WebSocket URL
# Default: wss://chill.hyperfy.xyz/ws
# For local Hyperfy server (e.g., running on port 3000), use: ws://localhost:3000/ws
WS_URL=wss://chill.hyperfy.xyz/ws

# Discord Configuration
DISCORD_APPLICATION_ID=
DISCORD_API_TOKEN=

# Discord Auto-Post Settings
# Channel ID where the bot will post daily updates
DISCORD_POST_CHANNEL_ID=
# Post interval in hours (default: 24 = once per day)
DISCORD_POST_INTERVAL_HOURS=24
# Enable auto-posting (true/false)
DISCORD_ENABLE_AUTO_POST=true

DISCORD_VOICE_CHANNEL_ID=


# X API キー類（OAuth 1.0a）
TWITTER_API_KEY=
TWITTER_API_SECRET_KEY=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=

# Twitter Feature Toggles (Free Plan: minimal settings)
TWITTER_ENABLE_POST=true           # 1日1回投稿
TWITTER_ENABLE_REPLIES=true        # メンションへの返信を有効化
TWITTER_ENABLE_ACTIONS=false       # いいね/RTは無効（API消費が多い）
TWITTER_ENABLE_DISCOVERY=true      # 発見機能を有効化（最小限）

# Engagement intervals (very long to minimize API calls)
TWITTER_ENGAGEMENT_INTERVAL=360    # 6時間ごとにメンションをチェック（360分）
TWITTER_ENGAGEMENT_INTERVAL_MIN=300  # 最小5時間
TWITTER_ENGAGEMENT_INTERVAL_MAX=420  # 最大7時間

# Discovery intervals (1日1回のみ)
TWITTER_DISCOVERY_INTERVAL=1440    # 24時間ごとに発見サイクル
TWITTER_DISCOVERY_INTERVAL_MIN=1380  # 最小23時間
TWITTER_DISCOVERY_INTERVAL_MAX=1500  # 最大25時間
TWITTER_MAX_FOLLOWS_PER_CYCLE=1    # 1サイクルで最大1フォロー
TWITTER_MIN_FOLLOWER_COUNT=100     # フォロー対象の最低フォロワー数

# Posting Configuration
TWITTER_POST_IMMEDIATELY=false     # 起動時にポストしない
TWITTER_POST_INTERVAL=1440         # 24時間ごとに1回投稿
TWITTER_MAX_ENGAGEMENTS_PER_RUN=1  # 1サイクルで最大1件の返信

# Rate Limiting (conservative for Free Plan)
TWITTER_RETRY_LIMIT=1              # リトライは最小限
TWITTER_DRY_RUN=false              # テスト時はtrueに

# 検索の対象を絞る
TWITTER_TARGET_USERS=user1,user2
TWITTER_MAX_TWEET_LENGTH=280